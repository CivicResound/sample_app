<% if signed_in? %>
<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
		<% if current_user.admin? %>
		<section>
			<%= render 'shared/micropost_form' %>
		</section>
	</aside>
	<div class="span8">
		<h3>Jobs Listing</h3>
		<%= render 'shared/feed' %>
	</div>
	<% else %>
	<div class="span8">
		<%= render 'shared/micropost' %>
	</div>
	<% end %>
</div>

<% else %>
	<div class="center hero-unit">
		<h1>Welcome to the Virtual Career Fair</h1>
		<p>
			This is the home page for the <a href="http://civicresound.com">CivicResound</a>
		</p>
		<br />
			<%= link_to "Sign up now!", signup_path, class: "btn-large btn-primary" %>
	</div>
<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>

<% end %>


