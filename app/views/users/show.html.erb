<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= image_tag("blackVCF100.png") %>
				<%= @user.name %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
		<% if @user.microposts.any? %>
			<h3>Jobs (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>

			<%= will_paginate @microposts %>
		<% end %>
	</div>
	<div class="span16  alert alert-success block-message"><p><%= @user.degree_progress %></p></div>
	<div class="span16  alert alert-success block-message "><p><%= @user.skills %></div>
		<div class="span16  alert alert-success block-message "><p><%= @user.school_affliation %></p></div>	
		<div class="span16"><h1>Employment/Internships</h1></div>
	<div class="span16  alert alert-info block-message "><p><%= @user.employment_history %></p></div>	
	<div class="span3  alert alert-warning block-message "><p><%= @user.activities %></p></div>
		
	<div class="span3  alert alert-warning block-message "><p><%= @user.address %></p></div>		
	<div class="span3  alert alert-warning block-message "><p><%= @user.phone_number %> â€¢ <%= @user.email %></p></div>		
</div>

